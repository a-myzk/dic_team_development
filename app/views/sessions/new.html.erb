<h1>Log in</h1>
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
  <div class="input_area">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "your email" %>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "password" %>
    <%= f.submit "Log in", class: 'button' %>
  </div>
<% end %>