<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
  <div class="input_area">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "your user name" %>
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "your email" %>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "password" %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, placeholder: "type same password" %>
    <br>
    <%= f.submit yield(:button_text), class: 'button' %>
  </div>
<% end %>